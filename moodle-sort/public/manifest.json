{
    "manifest_version": 3,
    "name": "Moodle Cleaner",
    "description": "An extension to improve HKU Moodle UX for quicker and seamless navigation",
    "version": "1.0.0",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://moodle.hku.hk/*"
    ],
    "content_scripts": [
    {
      "matches": ["https://moodle.hku.hk/*"],
      "js": ["sorter.js"],
      "run_at": "document_idle"
    }
  ]
}