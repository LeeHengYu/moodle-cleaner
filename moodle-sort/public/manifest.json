{
    "manifest_version": 3,
    "name": "Moodle Cleaner",
    "description": "To improve HKU Moodle UX for more convenient navigation.",
    "version": "1.0.3",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://moodle.hku.hk/*"
    ],
    "content_scripts": [
    {
      "matches": ["https://moodle.hku.hk/*"],
      "js": ["sorter.js"],
      "run_at": "document_idle"
    }
  ]
}